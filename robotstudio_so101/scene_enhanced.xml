<mujoco model="enhanced_scene">
  <include file="so101.xml" />

  <!-- Enhanced physics configuration -->
  <option integrator="implicitfast" timestep="0.001" iterations="30" ls_iterations="40" 
          tolerance="1e-12" impratio="15" cone="elliptic"/>

  <visual>
    <headlight diffuse="0.7 0.7 0.7" ambient="0.4 0.4 0.4" specular="0.2 0.2 0.2" />
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="160" elevation="-20" />
    <quality shadowsize="4096"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.4 0.6 0.8" rgb2="0.1 0.1 0.2" width="512" height="3072" />
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
        markrgb="0.8 0.8 0.8" width="300" height="300" />
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2" />
    
    <!-- Enhanced table material -->
    <material name="table_enhanced" rgba="0.4 0.3 0.2 1" specular="0.3" shininess="0.4" reflectance="0.1"/>
  </asset>

  <worldbody>
    <!-- Multi-point lighting for better visibility -->
    <light pos="0.5 0.5 3" dir="0 0 -1" directional="true" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3"/>
    <light pos="-0.5 0.5 2" dir="0 0 -1" directional="false" diffuse="0.4 0.4 0.4"/>
    
    <!-- Enhanced floor -->
    <geom name="floor" size="0 0 0.05" pos="0 0 0" type="plane" material="groundplane" 
          friction="1.0 0.1 0.1" condim="4"/>
    
    <!-- Optional: Add workspace boundaries -->
    <body name="workspace_boundary" pos="0.35 0 0.1">
      <geom type="cylinder" size="0.5 0.001" rgba="0.5 0.5 0.5 0.2" contype="0" conaffinity="0"/>
    </body>
    
    <!-- Enhanced table -->
    <body name="table" pos="0.35 0 -0.01">
      <geom type="box" size="0.45 0.45 0.01" material="table_enhanced" 
            friction="0.9 0.1 0.1" condim="4" solref="0.01 1" solimp="0.9 0.95 0.001"/>
    </body>
  </worldbody>
</mujoco>